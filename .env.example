# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database (SQLite for development, PostgreSQL for production)
# For SQLite (local development):
DATABASE_URL="file:./dev.db"
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/motopay
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-secret-key-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Payment Gateways
# Paystack (Primary)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Flutterwave (Fallback)
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_public_key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@motopay.pl.gov.ng
EMAIL_FROM_NAME=Plateau MotoPay

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=ACyour_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+234xxx

# File Storage (AWS S3 - Optional)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET=motopay-documents
AWS_REGION=us-east-1

# Frontend URL (Vite dev server uses port 5173 by default)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Default Credentials
ADMIN_EMAIL=admin@psirs.gov.ng
ADMIN_PASSWORD=change_this_password

# Legacy System Integration
LEGACY_DB_URL=postgresql://legacy_user:password@legacy_host:5432/legacy_db
LEGACY_API_KEY=your_legacy_api_key
