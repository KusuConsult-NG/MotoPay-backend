// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @default(uuid())
  email             String              @unique
  passwordHash      String              @map("password_hash")
  phoneNumber       String?             @map("phone_number")
  fullName          String              @map("full_name")
  role              String              @default("PUBLIC") // Enum: PUBLIC, AGENT, ADMIN, SUPER_ADMIN
  agentId           String?             @unique @map("agent_id")
  isActive          Boolean             @default(true) @map("is_active")
  nin               String?             @unique
  isVerified        Boolean             @default(false) @map("is_verified")
  lastLogin         DateTime?           @map("last_login")
  createdAt         DateTime            @default(now()) @map("created_at")
  updatedAt         DateTime            @updatedAt @map("updated_at")
  
  // Relations
  transactions      Transaction[]
  assignedExceptions Exception[]        @relation("AssignedExceptions")
  priceChanges      PriceHistory[]      @relation("PriceChanger")
  priceApprovals    PriceHistory[]      @relation("PriceApprover")
  agentCommissions  AgentCommission[]
  refreshTokens     RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model Vehicle {
  id                String             @id @default(uuid())
  tin               String?
  plateNumber       String             @unique @map("plate_number")
  chassisNumber     String             @unique @map("chassis_number")
  engineNumber      String             @map("engine_number")
  make              String
  model             String
  year              Int
  vehicleType       String             @map("vehicle_type") // Enum: PRIVATE, COMMERCIAL, TRUCK, MOTORCYCLE, TRICYCLE
  ownerName         String             @map("owner_name")
  ownerContact      String             @map("owner_contact")
  registrationDate  DateTime           @default(now()) @map("registration_date")
  lastRenewalDate   DateTime?          @map("last_renewal_date")
  status            String             @default("ACTIVE") // Enum: ACTIVE, INACTIVE, SUSPENDED
  tinVerified       Boolean            @default(false) @map("tin_verified")
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  
  // Relations
  compliance        VehicleCompliance[]
  transactions      Transaction[]

  @@index([plateNumber])
  @@index([chassisNumber])
  @@index([tin])
  @@map("vehicles")
}

model ComplianceItem {
  id                    String              @id @default(uuid())
  name                  String
  description           String
  vehicleCategory       String              @map("vehicle_category") // Enum like VehicleType
  price                 Float
  isMandatory           Boolean             @default(false) @map("is_mandatory")
  validityPeriodDays    Int                 @map("validity_period_days")
  isLocked              Boolean             @default(false) @map("is_locked")
  createdAt             DateTime            @default(now()) @map("created_at")
  updatedAt             DateTime            @updatedAt @map("updated_at")
  
  // Relations
  vehicleCompliance     VehicleCompliance[]
  priceHistory          PriceHistory[]

  @@unique([name, vehicleCategory], name: "name_vehicleCategory")
  @@map("compliance_items")
}

model VehicleCompliance {
  id                String            @id @default(uuid())
  vehicleId         String            @map("vehicle_id")
  complianceItemId  String            @map("compliance_item_id")
  status            String            // Enum: ACTIVE, EXPIRED, PENDING
  issueDate         DateTime          @map("issue_date")
  expiryDate        DateTime          @map("expiry_date")
  certificateUrl    String?           @map("certificate_url")
  createdAt         DateTime          @default(now()) @map("created_at")
  updatedAt         DateTime          @updatedAt @map("updated_at")
  
  // Relations
  vehicle           Vehicle           @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  complianceItem    ComplianceItem    @relation(fields: [complianceItemId], references: [id])

  @@map("vehicle_compliance")
}

model Transaction {
  id                String              @id @default(uuid())
  reference         String              @unique
  userId            String?             @map("user_id")
  vehicleId         String              @map("vehicle_id")
  amount            Float
  fee               Float
  totalAmount       Float               @map("total_amount")
  paymentMethod     String              @map("payment_method") // Enum: CARD, USSD, BANK_TRANSFER
  paymentGateway    String              @map("payment_gateway") // Enum: PAYSTACK, FLUTTERWAVE
  paymentReference  String?             @map("payment_reference")
  status            String              // Enum: PENDING, SUCCESS, FAILED, REFUNDED
  channel           String              // Enum: SELF, AGENT
  agentId           String?             @map("agent_id")
  metadata          String?             // JSON string
  createdAt         DateTime            @default(now()) @map("created_at")
  updatedAt         DateTime            @updatedAt @map("updated_at")
  
  // Relations
  user              User?               @relation(fields: [userId], references: [id])
  vehicle           Vehicle             @relation(fields: [vehicleId], references: [id])
  receipt           Receipt?
  agentCommission   AgentCommission?

  @@index([reference])
  @@index([status])
  @@index([createdAt])
  @@map("transactions")
}

model Receipt {
  id              String      @id @default(uuid())
  transactionId   String      @unique @map("transaction_id")
  receiptNumber   String      @unique @map("receipt_number")
  pdfUrl          String?     @map("pdf_url")
  emailSentAt     DateTime?   @map("email_sent_at")
  createdAt       DateTime    @default(now()) @map("created_at")
  
  // Relations
  transaction     Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@map("receipts")
}

model AgentCommission {
  id              String            @id @default(uuid())
  agentId         String            @map("agent_id")
  transactionId   String            @unique @map("transaction_id")
  percentage      Float
  amount          Float
  status          String            // Enum: PENDING, PAID
  paidAt          DateTime?         @map("paid_at")
  createdAt       DateTime          @default(now()) @map("created_at")
  
  // Relations
  agent           User              @relation(fields: [agentId], references: [id])
  transaction     Transaction       @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@map("agent_commissions")
}

model Exception {
  id                  String          @id @default(uuid())
  ticketNumber        String          @unique @map("ticket_number")
  type                String          // Enum: VEHICLE_NOT_FOUND, DUPLICATE, DOCUMENT_MISMATCH, OTHER
  userSubmittedData   String          @map("user_submitted_data") // JSON string
  plateNumber         String?         @map("plate_number")
  chassisNumber       String?         @map("chassis_number")
  status              String          // Enum: PENDING, IN_PROGRESS, RESOLVED, REJECTED
  assignedTo          String?         @map("assigned_to")
  resolutionNotes     String?         @map("resolution_notes")
  evidenceUrls        String?         @map("evidence_urls") // JSON string
  createdAt           DateTime        @default(now()) @map("created_at")
  updatedAt           DateTime        @updatedAt @map("updated_at")
  resolvedAt          DateTime?       @map("resolved_at")
  
  // Relations
  assignedUser        User?           @relation("AssignedExceptions", fields: [assignedTo], references: [id])

  @@index([status])
  @@index([assignedTo])
  @@map("exceptions")
}

model PriceHistory {
  id                String          @id @default(uuid())
  complianceItemId  String          @map("compliance_item_id")
  oldPrice          Float           @map("old_price")
  newPrice          Float           @map("new_price")
  changedBy         String          @map("changed_by")
  reason            String
  approvedBy        String?         @map("approved_by")
  createdAt         DateTime        @default(now()) @map("created_at")
  
  // Relations
  complianceItem    ComplianceItem  @relation(fields: [complianceItemId], references: [id])
  changer           User            @relation("PriceChanger", fields: [changedBy], references: [id])
  approver          User?           @relation("PriceApprover", fields: [approvedBy], references: [id])

  @@map("price_history")
}

// Content Management Models for Dynamic Pages

model Service {
  id          String   @id @default(uuid())
  icon        String   // Material icon name (e.g., 'description', 'credit_card')
  title       String
  description String
  features    String   // JSON string of feature array
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model AboutSection {
  id        String   @id @default(uuid())
  section   String   // 'mission', 'what-we-do', 'why-choose'
  title     String
  content   String
  items     String?  // JSON string of items array (optional)
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about_sections")
}

model FAQ {
  id        String   @id @default(uuid())
  category  String   // 'general', 'registration', 'payments', 'compliance'
  question  String
  answer    String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("faqs")
}

model HelpCategory {
  id          String   @id @default(uuid())
  icon        String   // Material icon name
  title       String
  link        String   // URL or route path
  description String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("help_categories")
}


model ProcessedWebhook {
  id                 String   @id @default(uuid())
  eventReference     String   @unique @map("event_reference")
  gateway            String   // Enum like PaymentGateway
  eventType          String   @map("event_type")
  processedAt        DateTime @default(now()) @map("processed_at")

  @@index([eventReference])
  @@map("processed_webhooks")
}
