// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PUBLIC
  AGENT
  ADMIN
  SUPER_ADMIN
}

enum VehicleType {
  PRIVATE
  COMMERCIAL
  TRUCK
  MOTORCYCLE
  TRICYCLE
}

enum VehicleStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum ComplianceStatus {
  ACTIVE
  EXPIRED
  PENDING
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CARD
  USSD
  BANK_TRANSFER
}

enum PaymentGateway {
  PAYSTACK
  FLUTTERWAVE
}

enum TransactionChannel {
  SELF
  AGENT
}

enum ExceptionType {
  VEHICLE_NOT_FOUND
  DUPLICATE
  DOCUMENT_MISMATCH
  OTHER
}

enum ExceptionStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED
}

enum CommissionStatus {
  PENDING
  PAID
}

model User {
  id                String              @id @default(uuid())
  email             String              @unique
  passwordHash      String              @map("password_hash")
  phoneNumber       String?             @map("phone_number")
  fullName          String              @map("full_name")
  role              UserRole            @default(PUBLIC)
  agentId           String?             @unique @map("agent_id")
  isActive          Boolean             @default(true) @map("is_active")
  lastLogin         DateTime?           @map("last_login")
  createdAt         DateTime            @default(now()) @map("created_at")
  updatedAt         DateTime            @updatedAt @map("updated_at")
  
  // Relations
  transactions      Transaction[]
  assignedExceptions Exception[]        @relation("AssignedExceptions")
  priceChanges      PriceHistory[]      @relation("PriceChanger")
  priceApprovals    PriceHistory[]      @relation("PriceApprover")
  agentCommissions  AgentCommission[]
  refreshTokens     RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model Vehicle {
  id                String             @id @default(uuid())
  tin               String?
  plateNumber       String             @unique @map("plate_number")
  chassisNumber     String             @unique @map("chassis_number")
  engineNumber      String             @map("engine_number")
  make              String
  model             String
  year              Int
  vehicleType       VehicleType        @map("vehicle_type")
  ownerName         String             @map("owner_name")
  ownerContact      String             @map("owner_contact")
  registrationDate  DateTime           @default(now()) @map("registration_date")
  lastRenewalDate   DateTime?          @map("last_renewal_date")
  status            VehicleStatus      @default(ACTIVE)
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  
  // Relations
  compliance        VehicleCompliance[]
  transactions      Transaction[]

  @@index([plateNumber])
  @@index([chassisNumber])
  @@index([tin])
  @@map("vehicles")
}

model ComplianceItem {
  id                    String              @id @default(uuid())
  name                  String
  description           String
  vehicleCategory       VehicleType         @map("vehicle_category")
  price                 Decimal             @db.Decimal(10, 2)
  isMandatory           Boolean             @default(false) @map("is_mandatory")
  validityPeriodDays    Int                 @map("validity_period_days")
  isLocked              Boolean             @default(false) @map("is_locked")
  createdAt             DateTime            @default(now()) @map("created_at")
  updatedAt             DateTime            @updatedAt @map("updated_at")
  
  // Relations
  vehicleCompliance     VehicleCompliance[]
  priceHistory          PriceHistory[]

  @@unique([name, vehicleCategory], name: "name_vehicleCategory")
  @@map("compliance_items")
}

model VehicleCompliance {
  id                String            @id @default(uuid())
  vehicleId         String            @map("vehicle_id")
  complianceItemId  String            @map("compliance_item_id")
  status            ComplianceStatus
  issueDate         DateTime          @map("issue_date")
  expiryDate        DateTime          @map("expiry_date")
  certificateUrl    String?           @map("certificate_url")
  createdAt         DateTime          @default(now()) @map("created_at")
  updatedAt         DateTime          @updatedAt @map("updated_at")
  
  // Relations
  vehicle           Vehicle           @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  complianceItem    ComplianceItem    @relation(fields: [complianceItemId], references: [id])

  @@map("vehicle_compliance")
}

model Transaction {
  id                String              @id @default(uuid())
  reference         String              @unique
  userId            String?             @map("user_id")
  vehicleId         String              @map("vehicle_id")
  amount            Decimal             @db.Decimal(10, 2)
  fee               Decimal             @db.Decimal(10, 2)
  totalAmount       Decimal             @map("total_amount") @db.Decimal(10, 2)
  paymentMethod     PaymentMethod       @map("payment_method")
  paymentGateway    PaymentGateway      @map("payment_gateway")
  paymentReference  String?             @map("payment_reference")
  status            TransactionStatus
  channel           TransactionChannel
  agentId           String?             @map("agent_id")
  metadata          Json?
  createdAt         DateTime            @default(now()) @map("created_at")
  updatedAt         DateTime            @updatedAt @map("updated_at")
  
  // Relations
  user              User?               @relation(fields: [userId], references: [id])
  vehicle           Vehicle             @relation(fields: [vehicleId], references: [id])
  receipt           Receipt?
  agentCommission   AgentCommission?

  @@index([reference])
  @@index([status])
  @@index([createdAt])
  @@map("transactions")
}

model Receipt {
  id              String      @id @default(uuid())
  transactionId   String      @unique @map("transaction_id")
  receiptNumber   String      @unique @map("receipt_number")
  pdfUrl          String?     @map("pdf_url")
  emailSentAt     DateTime?   @map("email_sent_at")
  createdAt       DateTime    @default(now()) @map("created_at")
  
  // Relations
  transaction     Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@map("receipts")
}

model AgentCommission {
  id              String            @id @default(uuid())
  agentId         String            @map("agent_id")
  transactionId   String            @unique @map("transaction_id")
  percentage      Decimal           @db.Decimal(5, 2)
  amount          Decimal           @db.Decimal(10, 2)
  status          CommissionStatus
  paidAt          DateTime?         @map("paid_at")
  createdAt       DateTime          @default(now()) @map("created_at")
  
  // Relations
  agent           User              @relation(fields: [agentId], references: [id])
  transaction     Transaction       @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@map("agent_commissions")
}

model Exception {
  id                  String          @id @default(uuid())
  ticketNumber        String          @unique @map("ticket_number")
  type                ExceptionType
  userSubmittedData   Json            @map("user_submitted_data")
  plateNumber         String?         @map("plate_number")
  chassisNumber       String?         @map("chassis_number")
  status              ExceptionStatus
  assignedTo          String?         @map("assigned_to")
  resolutionNotes     String?         @map("resolution_notes")
  evidenceUrls        Json?           @map("evidence_urls")
  createdAt           DateTime        @default(now()) @map("created_at")
  updatedAt           DateTime        @updatedAt @map("updated_at")
  resolvedAt          DateTime?       @map("resolved_at")
  
  // Relations
  assignedUser        User?           @relation("AssignedExceptions", fields: [assignedTo], references: [id])

  @@index([status])
  @@index([assignedTo])
  @@map("exceptions")
}

model PriceHistory {
  id                String          @id @default(uuid())
  complianceItemId  String          @map("compliance_item_id")
  oldPrice          Decimal         @map("old_price") @db.Decimal(10, 2)
  newPrice          Decimal         @map("new_price") @db.Decimal(10, 2)
  changedBy         String          @map("changed_by")
  reason            String
  approvedBy        String?         @map("approved_by")
  createdAt         DateTime        @default(now()) @map("created_at")
  
  // Relations
  complianceItem    ComplianceItem  @relation(fields: [complianceItemId], references: [id])
  changer           User            @relation("PriceChanger", fields: [changedBy], references: [id])
  approver          User?           @relation("PriceApprover", fields: [approvedBy], references: [id])

  @@map("price_history")
}
